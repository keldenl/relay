{
  "name": "codex-cli",
  "displayName": "Codex CLI Integration",
  "description": "Built-in scaffolding for upcoming Codex CLI features.",
  "version": "0.0.1",
  "publisher": "vscode",
  "private": true,
  "license": "MIT",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:codexAgentView",
    "onCommand:codex.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codex.runTask",
        "title": "Codex: Run Task"
      }
    ],
    "viewsContainers": {
      "secondarySidebar": [
        {
          "id": "codexAgent",
          "title": "Agent",
          "icon": "media/agent.svg"
        }
      ]
    },
    "views": {
      "codexAgent": [
        {
          "id": "codexAgentView",
          "name": "Agent",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "compile": "gulp compile-extension:codex-cli",
    "watch": "gulp watch-extension:codex-cli",
    "dev:webview": "cd webview && npm run dev",
    "build:webview": "cd webview && npm run build",
    "build:ext": "gulp compile-extension:codex-cli",
    "build": "npm run build:webview && npm run build:ext"
  },
  "files": [
    "out/**",
    "bin/**",
    "media/**"
  ],
  "devDependencies": {
    "@types/node": "22.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode.git"
  }
}
