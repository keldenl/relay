{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"allowImportingTsExtensions": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strict": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"types": ["vite/client"],
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["../src/shared/*"]
		}
	},
	"include": ["src"]
}
